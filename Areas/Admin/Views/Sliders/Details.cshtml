@model CorporateCMS.Models.Slider

@{
    ViewData["Title"] = "Slider Detayları";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
        <h1 class="h3 fw-semibold m-0">Slider Detayları</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-app btn-app-soft btn-sm"><i class="fas fa-edit"></i> Düzenle</a>
            <a asp-action="Index" class="btn-app btn-app-outline btn-sm"><i class="fas fa-arrow-left"></i> Geri Dön</a>
        </div>
    </div>
    <div class="card-app p-0 overflow-hidden mb-4">
        <div class="px-4 py-3 border-bottom" style="background:var(--color-surface-alt);"><h2 class="h6 fw-semibold m-0 text-uppercase" style="letter-spacing:.5px;">Genel</h2></div>
        <div class="p-4">
            <div class="row g-4">
                <div class="col-md-8">
                    <dl class="row small mb-0">
                        <dt class="col-4">Başlık</dt><dd class="col-8">@Model.Title</dd>
                        <dt class="col-4">Açıklama</dt><dd class="col-8">@(!string.IsNullOrEmpty(Model.Description) ? Model.Description : "<span class=\"u-muted\">Belirtilmemiş</span>")</dd>
                        <dt class="col-4">Buton</dt><dd class="col-8">@(!string.IsNullOrEmpty(Model.ButtonText) ? Model.ButtonText : "<span class=\"u-muted\">Belirtilmemiş</span>")</dd>
                        <dt class="col-4">Sıra</dt><dd class="col-8">@Model.Order</dd>
                        <dt class="col-4">Durum</dt><dd class="col-8">@if (Model.IsActive){<span class="badge-app badge-soft" style="background:var(--color-success-soft); color:var(--color-success-contrast);">Aktif</span>} else {<span class="badge-app badge-outline">Pasif</span>}</dd>
                        <dt class="col-4">Link</dt><dd class="col-8">@if(!string.IsNullOrEmpty(Model.Link)){<a href="@Model.Link" target="_blank" class="btn-app btn-app-outline btn-sm"><i class="fas fa-external-link-alt"></i> Link</a>} else {<span class="u-muted">Belirtilmemiş</span>}</dd>
                        <dt class="col-4">Sekme</dt><dd class="col-8">@if (Model.OpenInNewTab){<span class="badge-app badge-soft" style="background:var(--color-info-soft); color:var(--color-info-contrast);">Yeni sekme</span>} else {<span class="badge-app badge-outline">Aynı sekme</span>}</dd>
                    </dl>
                </div>
                <div class="col-md-4">
                    <div class="small fw-semibold mb-2">Slider Resmi</div>
                    @if (!string.IsNullOrEmpty(Model.ImagePath)){
                        <div class="ratio ratio-16x9" style="--bs-aspect-ratio:60%; background:var(--color-surface-alt); border:1px solid var(--color-border); border-radius:var(--color-radius-md);">
                            <img src="@Model.ImagePath" alt="@Model.Title" style="object-fit:cover; width:100%; height:100%; border-radius:var(--color-radius-md);" />
                        </div>
                    } else {
                        <div class="p-4 text-center border rounded" style="border-color:var(--color-border); background:var(--color-surface-alt);">
                            <i class="fas fa-image fa-2x text-muted"></i>
                            <p class="small u-muted mb-0 mt-2">Resim yok</p>
                        </div>
                    }
                </div>
            </div>
            <div class="u-divider my-4"></div>
            <div class="row small g-3">
                <div class="col-md-6">
                    <div class="u-muted fw-semibold text-uppercase mb-1" style="letter-spacing:.5px;">Oluşturulma</div>
                    <div>@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</div>
                </div>
                <div class="col-md-6">
                    <div class="u-muted fw-semibold text-uppercase mb-1" style="letter-spacing:.5px;">Güncellenme</div>
                    <div>@(Model.UpdatedDate?.ToString("dd.MM.yyyy HH:mm") ?? "—")</div>
                </div>
            </div>
        </div>
    </div>
</div>
