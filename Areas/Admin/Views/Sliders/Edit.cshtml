@model CorporateCMS.Models.Slider

@{
    ViewData["Title"] = "Slider Düzenle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit me-2"></i>
                        Slider Düzenle
                    </h3>
                </div>
                
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImagePath" />
                    <input type="hidden" asp-for="CreatedDate" />
                    
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label">Başlık *</label>
                                    <input asp-for="Title" class="form-control" placeholder="Slider başlığını girin">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Order" class="form-label">Sıra No *</label>
                                    <input asp-for="Order" type="number" class="form-control" min="0">
                                    <span asp-validation-for="Order" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Slider açıklamasını girin"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="imageFile" class="form-label">Slider Resmi</label>
                                    <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*">
                                    <small class="form-text text-muted">Yeni resim seçilmezse mevcut resim korunur.</small>
                                    
                                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                                    {
                                        <div class="mt-2">
                                            <img src="@Model.ImagePath" alt="@Model.Title" class="img-thumbnail" style="max-width: 200px; max-height: 120px;">
                                        </div>
                                    }
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Link" class="form-label">Bağlantı</label>
                                    <input asp-for="Link" class="form-control" placeholder="https://example.com">
                                    <span asp-validation-for="Link" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="ButtonText" class="form-label">Buton Metni</label>
                                    <input asp-for="ButtonText" class="form-control" placeholder="Detaylar, Daha Fazla...">
                                    <span asp-validation-for="ButtonText" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                    <label asp-for="IsActive" class="form-check-label">Aktif</label>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="OpenInNewTab" class="form-check-input" type="checkbox">
                                    <label asp-for="OpenInNewTab" class="form-check-label">Yeni sekmede aç</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>
                            Güncelle
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
