@model IEnumerable<CorporateCMS.Models.Slider>

@{
    ViewData["Title"] = "Slider Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-images me-2"></i>
                        Slider Yönetimi
                    </h3>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i>
                        Yeni Slider Ekle
                    </a>
                </div>
                
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Sıra</th>
                                        <th>Resim</th>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                        <th>Link</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Order</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                                {
                                                    <img src="@item.ImagePath" alt="@item.Title" class="img-thumbnail" style="width: 80px; height: 50px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Resim yok</span>
                                                }
                                            </td>
                                            <td>@item.Title</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 50)
                                                {
                                                    @Html.Raw(item.Description.Substring(0, 50) + "...")
                                                }
                                                else
                                                {
                                                    @(item.Description ?? "")
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Link))
                                                {
                                                    <a href="@item.Link" target="_blank" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-external-link-alt"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-images fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz slider eklenmemiş</h5>
                            <a asp-action="Create" class="btn btn-primary mt-3">
                                <i class="fas fa-plus me-1"></i>
                                İlk Slider'ı Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
