@model CorporateCMS.Models.Slider

@{
    ViewData["Title"] = "Slider Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">
                        <i class="fas fa-trash me-2"></i>
                        Slider Sil
                    </h3>
                </div>
                
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Bu slider'ı silmek istediğinizden emin misiniz?
                    </div>
                    
                    <div class="row">
                        <div class="col-md-8">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="20%">Başlık:</th>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <th>Açıklama:</th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Description))
                                        {
                                            @Model.Description
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Sıra No:</th>
                                    <td>@Model.Order</td>
                                </tr>
                                <tr>
                                    <th>Durum:</th>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Oluşturulma:</th>
                                    <td>@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                        
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <div class="text-center">
                                    <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid img-thumbnail">
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info text-center">
                                    <i class="fas fa-image fa-2x"></i>
                                    <p class="mb-0 mt-2">Resim yok</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                
                <div class="card-footer">
                    <form asp-action="Delete" method="post" style="display: inline;">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bu slider\'ı silmek istediğinizden emin misiniz?')">
                            <i class="fas fa-trash me-1"></i>
                            Evet, Sil
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        İptal
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
