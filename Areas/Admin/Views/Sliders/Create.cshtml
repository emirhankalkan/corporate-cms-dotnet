@model CorporateCMS.Models.Slider

@{
    ViewData["Title"] = "Yeni Slider Ekle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-plus me-2"></i>
                        Yeni Slider Ekle
                    </h3>
                </div>
                
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label">Başlık *</label>
                                    <input asp-for="Title" class="form-control" placeholder="Slider başlığını girin">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Order" class="form-label">Sıra No *</label>
                                    <input asp-for="Order" type="number" class="form-control" min="0">
                                    <span asp-validation-for="Order" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Slider açıklamasını girin"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="imageFile" class="form-label">Slider Resmi</label>
                                    <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*">
                                    <div class="form-text">Önerilen boyut: 1920x600 px</div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ButtonText" class="form-label">Buton Metni</label>
                                    <input asp-for="ButtonText" class="form-control" placeholder="Örn: Daha Fazla">
                                    <span asp-validation-for="ButtonText" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Link" class="form-label">Link URL</label>
                            <input asp-for="Link" type="url" class="form-control" placeholder="https://example.com">
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="OpenInNewTab" class="form-check-input" type="checkbox">
                                    <label asp-for="OpenInNewTab" class="form-check-label">
                                        Yeni sekmede aç
                                    </label>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                    <label asp-for="IsActive" class="form-check-label">
                                        Aktif
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>
                            Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
