@model CorporateCMS.Models.Slider

@{
    ViewData["Title"] = "Yeni Slider Ekle";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
        <h1 class="h3 fw-semibold m-0">Yeni Slider Ekle</h1>
        <a asp-action="Index" class="btn-app btn-app-outline btn-sm"><i class="fas fa-arrow-left"></i> Geri Dön</a>
    </div>
    <div class="card-app p-0 overflow-hidden">
        <div class="px-4 py-3 border-bottom" style="background:var(--color-surface-alt);"><h2 class="h6 fw-semibold m-0 text-uppercase" style="letter-spacing:.5px;">Bilgiler</h2></div>
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="p-4 form-app-modern" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Title" class="form-label fw-medium">Başlık *</label>
                    <input asp-for="Title" class="form-control" placeholder="Slider başlığını girin" />
                    <span asp-validation-for="Title" class="field-error small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Order" class="form-label fw-medium">Sıra No *</label>
                    <input asp-for="Order" type="number" class="form-control" min="0" />
                    <span asp-validation-for="Order" class="field-error small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="ButtonText" class="form-label fw-medium">Buton Metni</label>
                    <input asp-for="ButtonText" class="form-control" placeholder="Örn: Daha Fazla" />
                    <span asp-validation-for="ButtonText" class="field-error small"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Description" class="form-label fw-medium">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Slider açıklamasını girin"></textarea>
                    <span asp-validation-for="Description" class="field-error small"></span>
                </div>
                <div class="col-md-6">
                    <label for="imageFile" class="form-label fw-medium">Slider Resmi</label>
                    <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                    <div class="form-text">Önerilen boyut: 1920x600 px</div>
                </div>
                <div class="col-md-6">
                    <label asp-for="Link" class="form-label fw-medium">Link URL</label>
                    <input asp-for="Link" type="url" class="form-control" placeholder="https://example.com" />
                    <span asp-validation-for="Link" class="field-error small"></span>
                </div>
                <div class="col-md-6 d-flex align-items-center">
                    <div class="form-check mt-3">
                        <input asp-for="OpenInNewTab" class="form-check-input" type="checkbox" />
                        <label asp-for="OpenInNewTab" class="form-check-label small">Yeni sekmede aç</label>
                    </div>
                </div>
                <div class="col-md-6 d-flex align-items-center">
                    <div class="form-check mt-3">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsActive" class="form-check-label small">Aktif</label>
                    </div>
                </div>
            </div>
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn-app"><i class="fas fa-save"></i> Kaydet</button>
                <a asp-action="Index" class="btn-app btn-app-outline"><i class="fas fa-times"></i> İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
