@model CorporateCMS.Models.Menu

@{
    ViewData["Title"] = "Menü Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">
                        <i class="fas fa-trash me-2"></i>
                        Menü Sil
                    </h3>
                </div>
                
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Bu menüyü silmek istediğinizden emin misiniz?
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="30%">Menü Başlığı:</th>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <th>URL:</th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Url))
                                        {
                                            <code>@Model.Url</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Sıra No:</th>
                                    <td>@Model.Order</td>
                                </tr>
                            </table>
                        </div>
                        
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="30%">Durum:</th>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Oluşturulma:</th>
                                    <td>@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    
                    @if (Model.Children.Any())
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Uyarı:</strong> Bu menünün @Model.Children.Count alt menüsü var. Menü silindiğinde alt menüler de silinecektir.
                        </div>
                    }
                </div>
                
                <div class="card-footer">
                    <form asp-action="Delete" method="post" style="display: inline;">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bu menüyü silmek istediğinizden emin misiniz?')">
                            <i class="fas fa-trash me-1"></i>
                            Evet, Sil
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        İptal
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
