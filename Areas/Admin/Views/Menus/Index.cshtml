@model IEnumerable<CorporateCMS.Models.Menu>

@{
    ViewData["Title"] = "Menü Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-bars me-2"></i>
                        Menü Yönetimi
                    </h3>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i>
                        Yeni Menü Ekle
                    </a>
                </div>
                
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Sıra</th>
                                        <th>Menü Adı</th>
                                        <th>URL</th>
                                        <th>Üst Menü</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr style="@(item.ParentId != null ? "padding-left: 20px;" : "")">
                                            <td>@item.Order</td>
                                            <td>
                                                @if (item.ParentId != null)
                                                {
                                                    <i class="fas fa-arrow-right text-muted me-2"></i>
                                                }
                                                @if (!string.IsNullOrEmpty(item.Icon))
                                                {
                                                    <i class="@item.Icon me-2"></i>
                                                }
                                                @item.Title
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Url))
                                                {
                                                    <code>@item.Url</code>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Parent != null)
                                                {
                                                    @item.Parent.Title
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Ana Menü</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pasif</span>
                                                }
                                                @if (item.IsExternal)
                                                {
                                                    <span class="badge bg-info ms-1">Harici Link</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-bars fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz menü eklenmemiş</h5>
                            <a asp-action="Create" class="btn btn-primary mt-3">
                                <i class="fas fa-plus me-1"></i>
                                İlk Menü'yü Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        console.log('Menu Index sayfası yüklendi');
        
        // Sayfa yüklendiğinde butonları kontrol et
        $(document).ready(function() {
            console.log('jQuery ready');
            
            // Tüm butonları listele ve düzelt
            $('.btn').each(function(index, button) {
                var href = $(button).attr('href');
                console.log('Buton ' + index + ':', href, $(button).text().trim());
                
                // Eğer bağlantı doğru formatta değilse düzelt
                if (href && !href.startsWith("/") && !href.startsWith("http")) {
                    // Area değerini ekleyelim
                    if (!href.includes('/Admin/')) {
                        var newHref = '/Admin/' + href;
                        console.log('Bağlantı düzeltildi:', href, ' => ', newHref);
                        $(button).attr('href', newHref);
                    }
                }
            });
            
            // Buton click eventlerini dinle
            $('.btn').on('click', function(e) {
                console.log('Buton tıklandı:', $(this).attr('href'));
                
                // Eğer href boşsa engelleyelim
                if (!$(this).attr('href') || $(this).attr('href') === '#') {
                    e.preventDefault();
                    console.log('Geçersiz href, tıklama engellendi');
                    alert('Bu bağlantı henüz aktif değil.');
                    return false;
                }
            });
        });
    </script>
}
