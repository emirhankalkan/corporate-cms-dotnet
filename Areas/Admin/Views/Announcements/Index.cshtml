@model IEnumerable<CorporateCMS.Models.Announcement>

@{
    ViewData["Title"] = "Duyuru Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-bullhorn me-2"></i>
                        Duyuru Yönetimi
                    </h3>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i>
                        Yeni Duyuru Ekle
                    </a>
                </div>
                
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Başlık</th>
                                        <th>Özet</th>
                                        <th>Yayın Tarihi</th>
                                        <th>Görüntüleme</th>
                                        <th>Sabit</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.Title</strong>
                                                @if (item.IsPinned)
                                                {
                                                    <i class="fas fa-thumbtack text-warning ms-1" title="Sabit"></i>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Summary) && item.Summary.Length > 60)
                                                {
                                                    @Html.Raw(item.Summary.Substring(0, 60) + "...")
                                                }
                                                else
                                                {
                                                    @(item.Summary ?? "")
                                                }
                                            </td>
                                            <td>@item.PublishDate?.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                <span class="badge bg-info">@item.ViewCount</span>
                                            </td>
                                            <td>
                                                @if (item.IsPinned)
                                                {
                                                    <span class="badge bg-warning">Sabit</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-bullhorn fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz duyuru eklenmemiş</h5>
                            <a asp-action="Create" class="btn btn-primary mt-3">
                                <i class="fas fa-plus me-1"></i>
                                İlk Duyuru'yu Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
