@model IEnumerable<CorporateCMS.Models.Announcement>

@{
    ViewData["Title"] = "Duyuru Yönetimi";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 10;
    var totalCount = ViewBag.TotalCount as int? ?? Model.Count();
    int totalPages = (int)Math.Ceiling(totalCount / (double)pageSize);
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
        <h1 class="h3 fw-semibold m-0">Duyuru Yönetimi</h1>
        <a asp-action="Create" class="btn-app btn-app"><i class="fas fa-plus"></i> Yeni Duyuru</a>
    </div>
    <div class="card-app p-0 overflow-hidden">
        <div class="px-4 py-3 border-bottom d-flex justify-content-between align-items-center" style="background:var(--color-surface-alt);">
            <span class="small fw-semibold text-uppercase" style="letter-spacing:.5px;">Liste</span>
            @if (TempData["SuccessMessage"] != null){<span class="badge-app badge-soft" style="background:var(--color-primary-soft); color:var(--color-primary);">@TempData["SuccessMessage"]</span>}
        </div>
        <div class="p-0">
            @if (Model.Any()){
                <div class="table-responsive">
                    <table class="table-app w-100">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Özet</th>
                                <th>Yayın</th>
                                <th>Görüntüleme</th>
                                <th>Sabit</th>
                                <th>Durum</th>
                                <th>Slug</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model){
                            <tr>
                                <td class="fw-medium">
                                    @item.Title
                                    @if (item.IsPinned){ <i class="fas fa-thumbtack text-warning ms-1" title="Sabit"></i> }
                                </td>
                                <td class="small u-muted">
                                    @if (!string.IsNullOrEmpty(item.Summary) && item.Summary.Length > 60){
                                        @Html.Raw(item.Summary.Substring(0,60) + "...")
                                    } else { @(item.Summary ?? "") }
                                </td>
                                <td class="small">@item.PublishDate?.ToString("dd.MM.yyyy")</td>
                                <td><span class="badge-app badge-outline">@item.ViewCount</span></td>
                                <td>
                                    @if (item.IsPinned){<span class="badge-app badge-soft" style="background:var(--color-warning-soft); color:var(--color-warning-contrast);">Sabit</span>} else {<span class="u-muted small">-</span>}
                                </td>
                                <td>
                                    @if (item.IsActive){<span class="badge-app badge-soft" style="background:var(--color-success-soft); color:var(--color-success-contrast);">Aktif</span>} else {<span class="badge-app badge-outline">Pasif</span>}
                                </td>
                                <td class="text-muted small">@item.Slug</td>
                                <td class="text-end">
                                    <div class="d-flex gap-1 justify-content-end flex-wrap">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-app btn-app-soft btn-sm" title="Görüntüle"><i class="fas fa-eye"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-app btn-app-soft btn-sm" title="Düzenle"><i class="fas fa-edit"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-app btn-app-danger btn-sm" title="Sil"><i class="fas fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            } else {
                <div class="p-5 text-center">
                    <i class="fas fa-bullhorn fa-3x text-muted mb-3"></i>
                    <h5 class="u-muted mb-3">Henüz duyuru eklenmemiş</h5>
                    <a asp-action="Create" class="btn-app btn-app-outline"><i class="fas fa-plus"></i> İlk Duyuru'yu Ekle</a>
                </div>
            }
        </div>
        @if (totalPages > 1)
        {
            <div class="border-top px-3 py-2 d-flex justify-content-between align-items-center small bg-light-subtle">
                <div>Sayfa @currentPage / @totalPages (@totalCount kayıt)</div>
                <nav>
                    <ul class="pagination pagination-sm m-0">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-pageSize="@pageSize">«</a>
                        </li>
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@pageSize">@i</a>
                            </li>
                        }
                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-pageSize="@pageSize">»</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
