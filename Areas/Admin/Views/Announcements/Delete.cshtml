@model CorporateCMS.Models.Announcement

@{
    ViewData["Title"] = "Duyuru Sil";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
        <h1 class="h3 fw-semibold m-0">@ViewData["Title"]</h1>
        <a href="@Url.Action("Index")" class="btn-app btn-app-outline btn-sm"><i class="fas fa-arrow-left"></i> Geri Dön</a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-app p-0 overflow-hidden">
                <div class="px-4 py-3 border-bottom d-flex align-items-center gap-2" style="background:var(--color-danger-soft); color:var(--color-danger-contrast);">
                    <i class="fas fa-exclamation-triangle"></i>
                    <h2 class="h6 fw-semibold m-0 text-uppercase" style="letter-spacing:.5px;">Silme Onayı</h2>
                </div>
                <div class="p-4">
                    <div class="p-3 rounded border mb-4" style="background:var(--color-surface-alt); border-color:var(--color-border);">
                        <p class="m-0 small"><strong>Dikkat:</strong> Bu duyuruyu silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                        <p class="m-0 small mt-2">Silinecek duyuru: <strong>@Model.Title</strong></p>
                    </div>
                    <div class="row g-4">
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.ImagePath)) {
                                <div class="mb-3 ratio ratio-16x9" style="--bs-aspect-ratio:60%; background:var(--color-surface-alt);">
                                    <img src="@Model.ImagePath" alt="@Model.Title" style="object-fit:cover; width:100%; height:100%; border-radius:var(--color-radius-md);" />
                                </div>
                            }
                            <dl class="row small mb-0">
                                <dt class="col-4">Başlık</dt><dd class="col-8">@Model.Title</dd>
                                @if (!string.IsNullOrEmpty(Model.Summary)) {<dt class="col-4">Özet</dt><dd class="col-8">@Model.Summary</dd>}
                                <dt class="col-4">Durum</dt><dd class="col-8">@if(Model.IsActive){<span class="badge-app badge-soft" style="background:var(--color-success-soft); color:var(--color-success-contrast);">Aktif</span>} else {<span class="badge-app badge-outline">Pasif</span>}</dd>
                                <dt class="col-4">Sabit</dt><dd class="col-8">@if(Model.IsPinned){<span class="badge-app badge-soft" style="background:var(--color-warning-soft); color:var(--color-warning-contrast);">Evet</span>} else {<span class="u-muted">Hayır</span>}</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row small mb-0">
                                <dt class="col-6">Yayın</dt><dd class="col-6">@Model.PublishDate?.ToString("dd.MM.yyyy")</dd>
                                <dt class="col-6">Oluşturma</dt><dd class="col-6">@Model.CreatedDate.ToString("dd.MM.yyyy")</dd>
                                <dt class="col-6">Oluşturan</dt><dd class="col-6">@Model.CreatedBy</dd>
                                <dt class="col-6">Görüntülenme</dt><dd class="col-6"><span class="badge-app badge-outline">@Model.ViewCount</span></dd>
                                @if (!string.IsNullOrEmpty(Model.Tags)) {<dt class="col-6">Etiketler</dt><dd class="col-6">@foreach (var tag in Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries).Take(3)){<span class="badge-app badge-outline me-1">@tag.Trim()</span>}</dd>}
                            </dl>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center gap-2 mt-4">
                        <form asp-action="Delete" class="d-inline" onsubmit="return confirm('Silme işlemini onaylıyor musunuz?');">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn-app btn-app-danger"><i class="fas fa-trash"></i> Evet, Sil</button>
                        </form>
                        <a href="@Url.Action("Index")" class="btn-app btn-app-outline"><i class="fas fa-times"></i> İptal</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
