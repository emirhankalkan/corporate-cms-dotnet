@model CorporateCMS.Models.Announcement

@{
    ViewData["Title"] = "Yeni Duyuru Oluştur";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
        <h1 class="h3 fw-semibold m-0">@ViewData["Title"]</h1>
        <a href="@Url.Action("Index")" class="btn-app btn-app-outline btn-sm"><i class="fas fa-arrow-left"></i> Geri Dön</a>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card-app p-0 overflow-hidden mb-4">
                <div class="border-bottom px-4 py-3 d-flex align-items-center justify-content-between" style="background:var(--color-surface-alt);">
                    <h2 class="h6 fw-semibold m-0 text-uppercase tracking-wide" style="letter-spacing:.5px;">Duyuru Bilgileri</h2>
                </div>
                <div class="p-4">
                    <form asp-action="Create" enctype="multipart/form-data" class="form-app-modern" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-medium">Başlık</label>
                            <input asp-for="Title" class="form-control" placeholder="Duyuru başlığını girin" />
                            <span asp-validation-for="Title" class="field-error small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Slug" class="form-label fw-medium">Slug (URL)</label>
                            <input asp-for="Slug" class="form-control" placeholder="Boş bırakılırsa otomatik" />
                            <span asp-validation-for="Slug" class="field-error small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Summary" class="form-label fw-medium">Özet</label>
                            <textarea asp-for="Summary" class="form-control" rows="3" placeholder="Kısa özet yazın"></textarea>
                            <span asp-validation-for="Summary" class="field-error small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-medium">İçerik</label>
                            <textarea asp-for="Content" class="form-control rich-text-editor" rows="10" placeholder="Duyuru içeriğini yazın"></textarea>
                            <span asp-validation-for="Content" class="field-error small"></span>
                            <div class="form-text">HTML içerik güvenlik için temizlenir.</div>
                        </div>

                        <div class="mb-3">
                            <label for="imageFile" class="form-label fw-medium">Resim</label>
                            <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/jpeg,image/png,image/gif,image/webp" />
                            <div class="form-text">İzin verilen: JPG, PNG, GIF, WEBP • Maks 2MB</div>
                            @if (ViewData.ModelState.ContainsKey("ImageFile"))
                            {
                                <span class="field-error small">@ViewData.ModelState["ImageFile"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tags" class="form-label fw-medium">Etiketler</label>
                            <input asp-for="Tags" class="form-control" placeholder="Virgülle ayırarak etiketler girin" />
                            <span asp-validation-for="Tags" class="field-error small"></span>
                            <div class="form-text">Örnek: teknoloji, haberler, duyuru</div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="PublishDate" class="form-label fw-medium">Yayın Tarihi</label>
                                <input asp-for="PublishDate" class="form-control" type="datetime-local" value="@(Model.PublishDate?.ToString("yyyy-MM-ddTHH:mm") ?? DateTime.Now.ToString("yyyy-MM-ddTHH:mm"))" />
                                <span asp-validation-for="PublishDate" class="field-error small"></span>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <div class="form-check">
                                    <input asp-for="IsPinned" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsPinned" class="form-check-label small">Sabitlenmiş</label>
                                </div>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label small">Aktif</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-text mt-1 mb-3">Sabitlenmiş duyurular listede en üstte görünür.</div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn-app"><i class="fas fa-save"></i> Kaydet</button>
                            <a href="@Url.Action("Index")" class="btn-app btn-app-outline"><i class="fas fa-times"></i> İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4 d-flex flex-column gap-4">
            <div class="card-app p-0">
                <div class="border-bottom px-4 py-3" style="background:var(--color-surface-alt);"><h2 class="h6 fw-semibold m-0 text-uppercase" style="letter-spacing:.5px;">Yardım</h2></div>
                <div class="p-4 small u-muted">
                    <ul class="list-unstyled mb-0 d-grid gap-2">
                        <li><i class="fas fa-info-circle text-primary me-1"></i><strong> Başlık:</strong> Duyurunun ana başlığı</li>
                        <li><i class="fas fa-info-circle text-primary me-1"></i><strong> Slug:</strong> URL parçası, otomatik üretilebilir</li>
                        <li><i class="fas fa-info-circle text-primary me-1"></i><strong> Özet:</strong> Kısa açıklama metni</li>
                        <li><i class="fas fa-info-circle text-primary me-1"></i><strong> İçerik:</strong> Detaylı duyuru metni (temizlenir)</li>
                        <li><i class="fas fa-info-circle text-primary me-1"></i><strong> Etiketler:</strong> Arama için anahtar kelimeler</li>
                        <li><i class="fas fa-info-circle text-primary me-1"></i><strong> Sabitlenmiş:</strong> Önemli duyuru üstte çıkar</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '.rich-text-editor',
            height: 320,
            menubar: false,
            plugins: 'advlist autolink lists link image charmap code table',
            toolbar: 'undo redo | styles | bold italic | bullist numlist | link image | code',
            language: 'tr',
            content_style: 'body { font-family:Inter,Arial,sans-serif; font-size:14px; }'
        });
    </script>
}
