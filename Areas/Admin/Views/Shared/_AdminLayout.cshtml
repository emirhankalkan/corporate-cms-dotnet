<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kurumsal CMS Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --success-color: #4cc9f0;
            --info-color: #4895ef;
            --warning-color: #f72585;
            --danger-color: #e63946;
            --light-color: #f8f9fa;
            --dark-color: #212529;
            --sidebar-width: 250px;
            --sidebar-collapsed-width: 70px;
            --header-height: 60px;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f7fb;
            color: #444;
            overflow-x: hidden;
        }
        
        h1, h2, h3, h4, h5, h6, .sidebar-brand span {
            font-family: 'Poppins', sans-serif;
        }
        
        .sidebar {
            background: linear-gradient(180deg, #4361ee 0%, #3a0ca3 100%);
            color: #fff;
            width: var(--sidebar-width);
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1030;
            transition: all 0.3s ease;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        
        .sidebar-collapsed .sidebar {
            width: var(--sidebar-collapsed-width);
        }
        
        .sidebar-brand {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            height: var(--header-height);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .sidebar-brand a {
            color: #fff;
            font-weight: 700;
            display: flex;
            align-items: center;
        }
        
        .sidebar-brand i {
            font-size: 1.5rem;
            margin-right: 0.75rem;
        }
        
        .sidebar-menu {
            padding: 1.5rem 0;
        }
        
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            border-radius: 0;
            transition: all 0.3s ease;
            margin: 0.25rem 0.75rem;
            border-radius: 8px;
        }
        
        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: rgba(255, 255, 255, 0.15);
            color: #fff;
        }
        
        .sidebar .nav-link i {
            font-size: 1.1rem;
            margin-right: 0.75rem;
            text-align: center;
            width: 20px;
        }
        
        .main-content {
            margin-left: var(--sidebar-width);
            transition: all 0.3s ease;
        }
        
        .sidebar-collapsed .main-content {
            margin-left: var(--sidebar-collapsed-width);
        }
        
        .header {
            height: var(--header-height);
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
            position: sticky;
            top: 0;
            z-index: 1020;
        }
        
        .header-content {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1.5rem;
        }
        
        .sidebar-toggle {
            color: #555;
            padding: 0;
            font-size: 1.25rem;
        }
        
        .content {
            padding: 1.5rem;
        }
        
        .stats-card {
            background: #fff;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
            position: relative;
            overflow: hidden;
        }
        
        .stats-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 0.5rem;
            position: relative;
            z-index: 2;
        }
        
        .stats-label {
            color: #666;
            font-weight: 500;
            display: flex;
            align-items: center;
            position: relative;
            z-index: 2;
        }
        
        .stats-label i {
            margin-right: 0.5rem;
            font-size: 1.25rem;
        }
        
        /* Custom gradients for stats cards */
        .stats-card:nth-child(1) {
            background: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
            color: #fff;
        }
        
        .stats-card:nth-child(1) .stats-number,
        .stats-card:nth-child(1) .stats-label {
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-content">
                <div class="sidebar-brand">
                    <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="text-decoration-none">
                        <i class="fas fa-cogs"></i>
                        <span>Kurumsal CMS</span>
                    </a>
                </div>
                
                <div class="sidebar-menu">
                    <div class="px-3 mb-3 small text-white opacity-75">
                        <span>MENÜ</span>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-tachometer-alt"></i>
                                <span>Kontrol Paneli</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Pages" asp-action="Index">
                                <i class="fas fa-file-alt"></i>
                                <span>Sayfalar</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Menus" asp-action="Index">
                                <i class="fas fa-bars"></i>
                                <span>Menüler</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Sliders" asp-action="Index">
                                <i class="fas fa-images"></i>
                                <span>Slider</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Announcements" asp-action="Index">
                                <i class="fas fa-bullhorn"></i>
                                <span>Duyurular</span>
                            </a>
                        </li>
                    </ul>
                    <hr class="my-3 border-white opacity-10">
                    <div class="px-3 mb-3 small text-white opacity-75">
                        <span>SİSTEM</span>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="fas fa-home"></i>
                                <span>Ana Siteye Dön</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <form asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link border-0 bg-transparent w-100 text-start">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>Çıkış Yap</span>
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main content -->
        <div class="main-content">
            <!-- Header -->
            <header class="header">
                <div class="header-content">
                    <button class="btn btn-link sidebar-toggle" type="button">
                        <i class="fas fa-bars"></i>
                    </button>
                    
                    <div class="header-right">
                        <div class="dropdown">
                            <a class="btn btn-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user"></i>
                                @User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/">Ana Site</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt"></i> Çıkış
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <main class="content">
                <div class="container-fluid">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    <script src="~/js/link-fixer.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    
    <script>
        // Sayfa bulunamadı hatası için önlem - tüm linkler için area ekle
        $(document).ready(function() {
            // Admin area'dayız
            if (window.location.pathname.includes('/Admin/')) {
                // Tüm linkleri düzelt
                $('a[href]').each(function() {
                    var href = $(this).attr('href');
                    // Eğer göreceli path ise ve Admin içermiyorsa
                    if (href && !href.startsWith('/') && !href.startsWith('http') && !href.startsWith('#') && !href.includes('/Admin/')) {
                        $(this).attr('href', '/Admin/' + href);
                        console.log('Link düzeltildi:', href, ' => ', '/Admin/' + href);
                    }
                });
                
                // Tüm formların action'larını düzelt
                $('form[action]').each(function() {
                    var action = $(this).attr('action');
                    // Eğer göreceli path ise ve Admin içermiyorsa
                    if (action && !action.startsWith('/') && !action.startsWith('http') && !action.includes('/Admin/')) {
                        $(this).attr('action', '/Admin/' + action);
                        console.log('Form action düzeltildi:', action, ' => ', '/Admin/' + action);
                    }
                });
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
