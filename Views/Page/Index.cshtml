@model IEnumerable<CorporateCMS.Models.Page>

@{
    ViewData["Title"] = "Sayfalar";
    ViewData["MetaDescription"] = "Kurumsal web sitemizdeki tüm sayfalar";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var searchTerm = ViewBag.SearchTerm as string;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
}

<div class="container py-5">
    <div class="row g-4">
        <div class="col-12 d-flex align-items-center justify-content-between flex-wrap gap-2">
            <nav aria-label="breadcrumb" class="small mb-0">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Sayfalar</li>
                </ol>
            </nav>
            <div class="small u-muted">@totalCount sayfa bulundu</div>
        </div>
        <div class="col-lg-8">
            <h1 class="h4 d-flex align-items-center gap-2 mb-3"><i class="fas fa-file-alt text-primary"></i> Sayfalar</h1>
            <div class="card-app mb-4">
                <form method="get" class="form-app">
                    <div class="row g-2 align-items-center">
                        <div class="col-md-7">
                            <div class="input-icon-group">
                                <span class="icon-box"><i class="fas fa-search"></i></span>
                                <input type="text" class="form-control" name="search" value="@searchTerm" placeholder="Sayfa ara..." />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select name="sortBy" class="form-select" onchange="this.form.submit()">
                                @{
                                    var sortBy = ViewBag.SortBy as string;
                                    var isNewest = sortBy == null || sortBy == "newest";
                                    var isOldest = sortBy == "oldest";
                                    var isTitle = sortBy == "title";
                                    var isViews = sortBy == "views";
                                }
                                <option value="newest" selected="@isNewest">Yeniden Eskiye</option>
                                <option value="oldest" selected="@isOldest">Eskiden Yeniye</option>
                                <option value="title" selected="@isTitle">Başlık (A-Z)</option>
                                <option value="views" selected="@isViews">En Çok Görüntülenen</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex gap-2">
                            <button type="submit" class="btn-app w-100"><i class="fas fa-search"></i></button>
                            @if (!string.IsNullOrEmpty(searchTerm))
                            {
                                <a href="@Url.Action("Index")" class="btn-app btn-app-outline"><i class="fas fa-times"></i></a>
                            }
                        </div>
                    </div>
                </form>
            </div>
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                <div class="card-app mb-4 bg-warning-subtle" style="--bs-bg-opacity:.15;">
                    <div class="small"><i class="fas fa-search me-1"></i> "<strong>@searchTerm</strong>" araması için @totalCount sonuç bulundu.</div>
                </div>
            }
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var page in Model)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card-app h-100 d-flex flex-column">
                                <h5 class="fw-semibold mb-2 text-clamp-2">
                                    <a href="/@(page.Slug)" class="text-decoration-none" style="color:inherit;">
                                        @(page.Title)
                                    </a>
                                </h5>

                                @if (!string.IsNullOrEmpty(page.MetaDescription))
                                {
                                    <p class="u-muted small text-clamp-3 mb-3">
                                        @(page.MetaDescription.Length > 120 ? page.MetaDescription.Substring(0, 120) + "..." : page.MetaDescription)
                                    </p>
                                }
                                <div class="mt-auto d-flex justify-content-between align-items-center pt-2">
                                    <a href="/@(page.Slug)" class="btn-app btn-app-soft btn-sm">
                                        <i class="fas fa-arrow-right"></i> Devam
                                    </a>
                                    <div class="text-end small u-muted">
                                        <div>
                                            <i class="fas fa-calendar me-1"></i>
                                            @(page.CreatedDate.ToString("dd.MM.yyyy"))
                                        </div>
                                        @if (page.ViewCount > 0)
                                        {
                                            <div>
                                                <i class="fas fa-eye me-1"></i>
                                                @(page.ViewCount) görüntülenme
                                            </div>;
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @if (totalPages > 1)
                {
                    <nav aria-label="Sayfa navigasyonu" class="my-4">
                        <ul class="pagination justify-content-center">
                            @{
                                // Mevcut URL parametrelerini koru
                                var urlParams = new Dictionary<string, string>();
                                if (!string.IsNullOrEmpty(searchTerm)) urlParams["search"] = searchTerm;
                                if (!string.IsNullOrEmpty(ViewBag.SortBy as string)) urlParams["sortBy"] = ViewBag.SortBy;

                                string GetPageUrl(int pageNumber)
                                {
                                    var parameters = new List<string> { $"page={pageNumber}" };
                                    foreach (var param in urlParams)
                                    {
                                        parameters.Add($"{param.Key}={Uri.EscapeDataString(param.Value)}");
                                    }
                                    return "?" + string.Join("&", parameters);
                                }
                                var startPage = Math.Max(1, currentPage - 2);
                                var endPage = Math.Min(totalPages, currentPage + 2);
                            }
                            <!-- İlk Sayfa -->
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="@GetPageUrl(1)" title="İlk Sayfa">
                                    <i class="fas fa-angle-double-left"></i>
                                </a>
                            </li>

                            <!-- Önceki Sayfa -->
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="@GetPageUrl(currentPage - 1)">
                                    <i class="fas fa-angle-left"></i>
                                </a>
                            </li>

                            @if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@GetPageUrl(1)">1</a>
                                </li>
                                @if (startPage > 2)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                            }
                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" href="@GetPageUrl(i)">@i</a>
                                </li>
                            }
                            @if (endPage < totalPages)
                            {
                                @if (endPage < totalPages - 1)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link" href="@GetPageUrl(totalPages)">@totalPages</a>
                                </li>
                            }
                            <!-- Sonraki Sayfa -->
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link" href="@GetPageUrl(currentPage + 1)">
                                    <i class="fas fa-angle-right"></i>
                                </a>
                            </li>

                            <!-- Son Sayfa -->
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link" href="@GetPageUrl(totalPages)" title="Son Sayfa">
                                    <i class="fas fa-angle-double-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="d-flex justify-content-center align-items-center gap-2 small">
                        <div class="btn-group btn-group-sm">
                            <a class="btn btn-outline-primary" href="@GetPageUrl(10)">10</a>
                            <a class="btn btn-outline-primary" href="@GetPageUrl(20)">20</a>
                            <a class="btn btn-outline-primary" href="@GetPageUrl(50)">50</a>
                        </div>
                        <span class="u-muted">sayfa başına</span>
                    </div>
                }
            }
            else
            {
                <div class="card-app text-center p-5">
                    <i class="fas fa-file-alt fa-2x u-muted mb-3"></i>
                    <h5 class="u-muted mb-2">@(!string.IsNullOrEmpty(searchTerm) ? "Arama sonucu bulunamadı" : "Henüz sayfa yok")</h5>
                    @if (!string.IsNullOrEmpty(searchTerm))
                    {
                        <p class="u-muted small mb-3">Farklı anahtar kelimeler deneyebilirsiniz.</p>
                        <a href="@Url.Action("Index")" class="btn-app btn-app-outline">
                            <i class="fas fa-list"></i> Tüm Sayfaları Görüntüle
                        </a>
                    }
                    else
                    {
                        <p class="u-muted small mb-0">İlk sayfamız yakında yayında!</p>
                    }
                </div>
            }
        </div>
        <div class="col-lg-4">
            <div class="card-app mb-4">
                <div class="fw-semibold mb-2 d-flex align-items-center gap-2">
                    <i class="fas fa-info-circle text-info"></i> Sayfa Bilgileri
                </div>
                <ul class="list-unstyled small mb-0 u-muted">
                    <li class="mb-1"><strong>Toplam Sayfa:</strong> @totalCount</li>
                    <li class="mb-1"><strong>Sayfa:</strong> @currentPage / @totalPages</li>
                    @if (!string.IsNullOrEmpty(searchTerm))
                    {
                        <li class="mb-1"><strong>Arama:</strong> @searchTerm</li>
                    }
                </ul>
            </div>
            <div class="card-app">
                <div class="fw-semibold mb-2 d-flex align-items-center gap-2">
                    <i class="fas fa-bullhorn text-warning"></i> Duyurular
                </div>
                <p class="u-muted small mb-3">Son duyurularımızı takip edin.</p>
                <a href="@Url.Action("Index", "Announcement")" class="btn-app btn-app-soft btn-sm">
                    <i class="fas fa-bullhorn"></i> Duyuruları Görüntüle
                </a>
            </div>
        </div>
    </div>
</div>
