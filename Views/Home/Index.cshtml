@{
    ViewData["Title"] = "Ana Sayfa";
    ViewData["MetaDescription"] = "Kurumsal CMS ile modern ve güvenli web sitenizi yönetin.";
    var sliders = ViewBag.Sliders as List<CorporateCMS.Models.Slider>;
    var recentPages = ViewBag.RecentPages as List<CorporateCMS.Models.Page>;
    var announcements = ViewBag.Announcements as List<CorporateCMS.Models.Announcement>;
}

<!-- Hero Section / Slider -->
<section class="hero-section">
    @if (sliders != null && sliders.Any())
    {
        <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                @for (int i = 0; i < sliders.Count; i++)
                {
                    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                }
            </div>
            <div class="carousel-inner">
                @for (int i = 0; i < sliders.Count; i++)
                {
                    var slider = sliders[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@slider.ImagePath" class="d-block w-100" alt="@slider.Title" style="height: 400px; object-fit: cover;">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="fw-bold">@slider.Title</h5>
                            @if (!string.IsNullOrEmpty(slider.Description))
                            {
                                <p>@slider.Description</p>
                            }
                            @if (!string.IsNullOrEmpty(slider.Link) && !string.IsNullOrEmpty(slider.ButtonText))
                            {
                                <a href="@slider.Link" class="btn btn-primary" @(slider.OpenInNewTab ? "target=\"_blank\"" : "")>@slider.ButtonText</a>
                            }
                        </div>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Önceki</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Sonraki</span>
            </button>
        </div>
    }
    else
    {
        <div class="bg-primary text-white py-5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <h1 class="display-4 fw-bold mb-3">Kurumsal CMS'ye Hoş Geldiniz</h1>
                        <p class="lead mb-4">Modern ASP.NET MVC teknolojisi ile geliştirilmiş, güvenli ve ölçeklenebilir içerik yönetim sistemi.</p>
                        <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="btn btn-light btn-lg">
                            <i class="fas fa-cog me-2"></i>Admin Panel
                        </a>
                    </div>
                    <div class="col-lg-4 text-center">
                        <i class="fas fa-building display-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

<div class="container my-5">
    <div class="row">
        <!-- Sol Kolon - Son Sayfalar -->
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 mb-0">
                    <i class="fas fa-file-alt text-primary me-2"></i>
                    Son Eklenen Sayfalar
                </h2>
                <a href="@Url.Action("Index", "Page")" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-file-alt me-1"></i>Tüm Sayfalar
                </a>
            </div>

            @if (recentPages != null && recentPages.Any())
            {
                <div class="row">
                    @foreach (var item in recentPages)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Title</h5>
                                    @if (!string.IsNullOrEmpty(item.MetaDescription))
                                    {
                                        <p class="card-text text-muted">@item.MetaDescription</p>
                                    }
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a href="/@item.Slug" class="btn btn-primary btn-sm">
                                            <i class="fas fa-arrow-right me-1"></i>Devamını Oku
                                        </a>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            @item.CreatedDate.ToString("dd.MM.yyyy")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Henüz sayfa eklenmemiş</h5>
                        <p class="text-muted">İlk sayfanızı oluşturmak için admin paneli kullanın.</p>
                        <a asp-area="Admin" asp-controller="Pages" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>İlk Sayfanızı Oluşturun
                        </a>
                    </div>
                </div>
            }
        </div>

        <!-- Sağ Kolon - Duyurular -->
        <div class="col-lg-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="h4 mb-0">
                    <i class="fas fa-bullhorn text-warning me-2"></i>
                    Duyurular
                </h3>
            </div>

            @if (announcements != null && announcements.Any())
            {
                <div class="list-group">
                    @foreach (var announcement in announcements)
                    {
                        <div class="list-group-item">
                            @if (announcement.IsPinned)
                            {
                                <i class="fas fa-thumbtack text-warning me-2"></i>
                            }
                            <h6 class="mb-2">
                                <a href="@Url.Action("Details", "Announcement", new { id = announcement.Id })" class="text-decoration-none">
                                    @announcement.Title
                                </a>
                            </h6>
                            @if (!string.IsNullOrEmpty(announcement.Summary))
                            {
                                <p class="mb-2 text-muted small">@announcement.Summary</p>
                            }
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    @announcement.CreatedDate.ToString("dd.MM.yyyy")
                                </small>
                                <a href="@Url.Action("Details", "Announcement", new { id = announcement.Id })" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-arrow-right me-1"></i>Detay
                                </a>
                            </div>
                        </div>
                    }
                </div>
                <div class="mt-3 text-center">
                    <a href="@Url.Action("Index", "Announcement")" class="btn btn-primary">
                        <i class="fas fa-bullhorn me-1"></i>Tüm Duyurular
                    </a>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-4">
                        <i class="fas fa-bullhorn fa-2x text-muted mb-3"></i>
                        <p class="text-muted mb-0">Henüz duyuru yok</p>
                    </div>
                </div>
            }

            <!-- Hızlı İstatistikler -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-bar text-info me-2"></i>
                        Site İstatistikleri
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-end">
                                <h4 class="text-primary mb-0">@((recentPages?.Count ?? 0))</h4>
                                <small class="text-muted">Aktif Sayfa</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4 class="text-warning mb-0">@((announcements?.Count ?? 0))</h4>
                            <small class="text-muted">Duyuru</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Özellikler Bölümü -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-6 fw-bold mb-3">Neden Kurumsal CMS?</h2>
                <p class="lead text-muted">Modern teknoloji ile güçlü özellikler</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="text-center">
                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-shield-alt fa-lg"></i>
                    </div>
                    <h5>Güvenli</h5>
                    <p class="text-muted">ASP.NET Identity ile rol bazlı güvenlik sistemi</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="text-center">
                    <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-mobile-alt fa-lg"></i>
                    </div>
                    <h5>Responsive</h5>
                    <p class="text-muted">Bootstrap 5 ile tüm cihazlarda mükemmel görünüm</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="text-center">
                    <div class="bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-bolt fa-lg"></i>
                    </div>
                    <h5>Hızlı</h5>
                    <p class="text-muted">.NET 9 teknolojisi ile yüksek performans</p>
                </div>
            </div>
        </div>
    </div>
</section>
