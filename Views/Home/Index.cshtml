@{
    ViewData["Title"] = "Ana Sayfa";
    ViewData["MetaDescription"] = "Kurumsal CMS ile modern ve güvenli web sitenizi yönetin.";
    var recentPages = ViewBag.RecentPages as List<CorporateCMS.Models.Page>;
    var announcements = ViewBag.Announcements as List<CorporateCMS.Models.Announcement>;
}

<!-- Hero Section - Modern -->
<section class="hero-app text-center">
    <div class="container">
        <h1 class="display-5 fw-bold mb-3">Kurumsal CMS</h1>
        <p class="lead mb-4 opacity-90">Profesyonel web sitesi yönetim sistemi ile dijital varlığınızı güçlendirin</p>
        <div class="d-flex justify-content-center flex-wrap gap-2">
            <a asp-area="" asp-controller="Page" asp-action="Index" class="btn-app">
                <i class="fas fa-file-alt"></i> Sayfalar
            </a>
            <a asp-area="" asp-controller="Announcement" asp-action="Index" class="btn-app btn-app-outline">
                <i class="fas fa-bullhorn"></i> Duyurular
            </a>
        </div>
        <div class="hero-stats-app mt-5">
            <div class="stat-card-app">
                <div class="stat-value-app"><i class="fas fa-users me-1"></i>1000+</div>
                <div class="stat-label-app">Kullanıcı</div>
            </div>
            <div class="stat-card-app">
                <div class="stat-value-app"><i class="fas fa-file me-1"></i>500+</div>
                <div class="stat-label-app">Sayfa</div>
            </div>
            <div class="stat-card-app">
                <div class="stat-value-app"><i class="fas fa-globe me-1"></i>10+</div>
                <div class="stat-label-app">Dil Desteği</div>
            </div>
        </div>
    </div>
</section>

<div class="container py-5">
    <div class="row g-5">
        <!-- Sol Kolon - Son Sayfalar -->
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-3 gap-2">
                <i class="fas fa-file-alt text-primary"></i>
                <h2 class="h4 mb-0">Son Eklenen Sayfalar</h2>
            </div>

            @if (recentPages != null && recentPages.Any())
            {
                <div class="row">
                    @foreach (var item in recentPages)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card-app h-100 d-flex flex-column">
                                <div class="mb-2 d-flex justify-content-between align-items-start">
                                    <span class="badge-app">Sayfa</span>
                                    <small class="u-muted"><i class="fas fa-calendar-alt me-1"></i>@item.CreatedDate.ToString("dd.MM.yyyy")</small>
                                </div>
                                <h5 class="fw-semibold mb-2 text-clamp-2">@item.Title</h5>
                                @if (!string.IsNullOrEmpty(item.MetaDescription))
                                {
                                    <p class="u-muted text-clamp-3 mb-3 small">@item.MetaDescription</p>
                                }
                                <div class="mt-auto d-flex justify-content-between align-items-center pt-2">
                                    <a href="/@item.Slug" class="btn-app btn-app-soft">
                                        <i class="fas fa-arrow-right"></i> Detay
                                    </a>
                                    <small class="u-muted"><i class="fas fa-eye me-1"></i>@(new Random().Next(10, 500))</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="text-center mt-4">
                    <a asp-controller="Page" asp-action="Index" class="btn-app btn-app-outline">
                        <i class="fas fa-list"></i> Tüm Sayfaları Gör
                    </a>
                </div>
            }
            else
            {
                <div class="card-app text-center p-5">
                    <p class="u-muted mb-0">Henüz sayfa eklenmemiş.</p>
                </div>
            }
        </div>

        <!-- Sağ Kolon - Duyurular -->
        <div class="col-lg-4">
            <div class="d-flex align-items-center mb-3 gap-2">
                <i class="fas fa-bullhorn text-primary"></i>
                <h2 class="h5 mb-0">Duyurular</h2>
            </div>

            @if (announcements != null && announcements.Any())
            {
                @foreach (var announcement in announcements)
                {
                    <div class="announce-card-app">
                        <span class="announce-meta"><i class="fas fa-calendar-alt me-1"></i>@announcement.CreatedDate.ToString("dd.MM.yyyy")</span>
                        <h5 class="mb-2 text-clamp-2">
                            <a href="@Url.Action("Details", "Announcement", new { id = announcement.Id })" class="stretched-link text-decoration-none" style="color:inherit;">@announcement.Title</a>
                        </h5>
                        @if (!string.IsNullOrEmpty(announcement.Summary))
                        {
                            <p class="u-muted small mb-2 text-clamp-3">@announcement.Summary</p>
                        }
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <a href="@Url.Action("Details", "Announcement", new { id = announcement.Id })" class="btn-app btn-app-soft">
                                <i class="fas fa-arrow-right"></i> Detay
                            </a>
                            <span class="badge-app badge-outline"><i class="fas fa-megaphone me-1"></i>Duyuru</span>
                        </div>
                    </div>
                }
                <div class="text-center mt-3">
                    <a asp-controller="Announcement" asp-action="Index" class="btn-app btn-app-outline">
                        <i class="fas fa-bullhorn"></i> Tüm Duyurular
                    </a>
                </div>
            }
            else
            {
                <div class="card-app p-4 text-center">
                    <p class="u-muted mb-0">Henüz duyuru eklenmemiş.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Özellikler Bölümü - Modern -->
<section class="py-5" style="background:var(--color-surface-alt);">
    <div class="container">
        <div class="text-center mb-5">
            <span class="badge-app">Özellikler</span>
            <h2 class="h4 mt-3 mb-2 fw-semibold">Neden Kurumsal CMS Tercih Edilmelidir?</h2>
            <p class="u-muted mx-auto" style="max-width:700px;">Modern teknolojiler ile geliştirilmiş, güvenli ve performanslı kurumsal içerik yönetim sistemi ile dijital varlığınızı güçlendirin.</p>
        </div>
        <div class="row g-4 justify-content-center">
            <div class="col-lg-4 col-md-6">
                <div class="feature-app">
                    <div class="feature-icon-app"><i class="fas fa-shield-alt"></i></div>
                    <h4 class="h6 fw-semibold mb-2">Güvenli</h4>
                    <p class="u-muted small mb-2">ASP.NET Identity ile rol bazlı güvenlik ve gelişmiş yetkilendirme sistemi.</p>
                    <ul>
                        <li><i class="fas fa-check me-1 text-success"></i>Rol bazlı yetkilendirme</li>
                        <li><i class="fas fa-check me-1 text-success"></i>2FA Desteği</li>
                        <li><i class="fas fa-check me-1 text-success"></i>HTTPS zorunluluğu</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-app">
                    <div class="feature-icon-app"><i class="fas fa-mobile-alt"></i></div>
                    <h4 class="h6 fw-semibold mb-2">Responsive</h4>
                    <p class="u-muted small mb-2">Bootstrap 5 ile tüm cihazlarda uyumlu görünüm ve modern arayüz.</p>
                    <ul>
                        <li><i class="fas fa-check me-1 text-success"></i>Mobil öncelikli tasarım</li>
                        <li><i class="fas fa-check me-1 text-success"></i>Tüm ekranlara uyum</li>
                        <li><i class="fas fa-check me-1 text-success"></i>Kullanıcı dostu arayüz</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-app">
                    <div class="feature-icon-app"><i class="fas fa-bolt"></i></div>
                    <h4 class="h6 fw-semibold mb-2">Hızlı</h4>
                    <p class="u-muted small mb-2">.NET 9 altyapısı ile yüksek performans ve optimize edilmiş veritabanı.</p>
                    <ul>
                        <li><i class="fas fa-check me-1 text-success"></i>Hızlı sayfa yükleme</li>
                        <li><i class="fas fa-check me-1 text-success"></i>Cache desteği</li>
                        <li><i class="fas fa-check me-1 text-success"></i>Veritabanı optimizasyonu</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Bölümü -->
<section class="py-5" style="background:linear-gradient(135deg,var(--color-primary),var(--color-primary-hover)); color:#fff;">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-8">
                <h2 class="h3 fw-semibold mb-2">Hemen Başlayın!</h2>
                <p class="mb-0 opacity-90">Kurumsal CMS ile web sitenizi dakikalar içinde hazır hale getirin.</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a href="#" class="btn-app btn-app-outline"><i class="fas fa-rocket"></i> Şimdi Başla</a>
            </div>
        </div>
    </div>
</section>
