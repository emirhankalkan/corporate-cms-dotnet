@model CorporateCMS.ViewModels.UserDashboardViewModel
@{
    ViewData["Title"] = "Kullanıcı Paneli";
    var displayName = !string.IsNullOrWhiteSpace(Model.DisplayName) ? Model.DisplayName : Model.UserName;
    string initial = (displayName ?? "?").Trim().Substring(0,1).ToUpper();
}

<div class="container py-5 user-dashboard">
    <div class="row g-4">
        <div class="col-lg-3">
            <aside class="dash-sidebar card-simple p-3 h-100">
                <div class="d-flex align-items-center gap-3 mb-4">
                    <div class="user-avatar-lg gradient-ring"><span>@initial</span></div>
                    <div class="flex-grow-1">
                        <div class="fw-semibold mb-1 text-truncate" title="@displayName">@displayName</div>
                        <div class="small text-muted text-truncate" title="@Model.Email">@Model.Email</div>
                    </div>
                </div>
                <nav>
                    <ul class="nav-vertical mb-4">
                        <li><a class="active" asp-controller="User" asp-action="Dashboard"><i class="fas fa-gauge"></i> Kontrol Paneli</a></li>
                        <li><a asp-controller="User" asp-action="Profile"><i class="fas fa-user-pen"></i> Profil Ayarları</a></li>
                        <li>
                            <a href="javascript:document.getElementById('logoutForm').submit();" class="text-danger"><i class="fas fa-right-from-bracket"></i> Çıkış Yap</a>
                            <form id="logoutForm" class="d-none" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"></form>
                        </li>
                    </ul>
                </nav>
                <div class="small text-muted mb-1">Roller</div>
                <div class="d-flex flex-wrap gap-1 role-badges">
                    @foreach (var role in Model.Roles) { <span class="badge bg-primary-subtle text-primary">@role</span> }
                </div>
            </aside>
        </div>
        <div class="col-lg-9">
            <div class="card-simple p-4 mb-4 dash-header position-relative overflow-hidden">
                <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-md-between gap-3 mb-3">
                    <div>
                        <h1 class="h5 fw-bold m-0 d-flex align-items-center gap-2"><i class="fas fa-gauge text-primary"></i> Kontrol Paneli</h1>
                        <p class="text-muted small mb-0 mt-1">Hesap özeti ve son aktivite</p>
                    </div>
                    <div class="d-flex gap-2">
                        <a asp-controller="User" asp-action="Profile" class="btn-simple btn-outline-simple btn-sm"><i class="fas fa-user-cog me-1"></i> Profil</a>
                        <a href="javascript:document.getElementById('logoutForm').submit();" class="btn-simple btn-primary-simple btn-sm"><i class="fas fa-right-from-bracket me-1"></i> Çıkış</a>
                    </div>
                </div>
                <div class="stats-stack">
                    <div class="stack-item">
                        <div class="stack-icon bg-gradient-primary"><i class="fas fa-users"></i></div>
                        <div class="stack-meta">
                            <span class="label">Rol Sayısı</span>
                            <span class="value">@Model.Roles.Count</span>
                        </div>
                    </div>
                    <div class="stack-item">
                        <div class="stack-icon bg-gradient-secondary"><i class="fas fa-clock"></i></div>
                        <div class="stack-meta">
                            <span class="label">Son Giriş</span>
                            <span class="value small-value">@(Model.LastLoginAt.HasValue ? Model.LastLoginAt.Value.ToLocalTime().ToString("dd.MM.yyyy HH:mm") : "-")</span>
                        </div>
                    </div>
                    <div class="stack-item">
                        <div class="stack-icon bg-gradient-warning"><i class="fas fa-at"></i></div>
                        <div class="stack-meta">
                            <span class="label">Kullanıcı Adı</span>
                            <span class="value small-value">@Model.UserName</span>
                        </div>
                    </div>
                    <div class="stack-item">
                        <div class="stack-icon bg-gradient-success"><i class="fas fa-envelope"></i></div>
                        <div class="stack-meta">
                            <span class="label">E-posta</span>
                            <span class="value tiny-value">@Model.Email</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="vstack gap-4">
                <div class="card-simple p-4">
                    <h6 class="section-title mb-3"><i class="fas fa-user text-primary me-2"></i>Hesap Bilgileri</h6>
                    <ul class="detail-list stacked mb-0">
                        <li>
                            <span class="dt">Görünen İsim</span>
                            <span class="dd">@(!string.IsNullOrWhiteSpace(Model.DisplayName) ? Model.DisplayName : "(tanımlı değil)")</span>
                        </li>
                        <li>
                            <span class="dt">Roller</span>
                            <span class="dd">@string.Join(", ", Model.Roles)</span>
                        </li>
                        <li>
                            <span class="dt">Son Giriş</span>
                            <span class="dd">@(Model.LastLoginAt.HasValue ? Model.LastLoginAt.Value.ToLocalTime().ToString("dd.MM.yyyy HH:mm") : "-")</span>
                        </li>
                        <li>
                            <span class="dt">Kullanıcı Adı</span>
                            <span class="dd">@Model.UserName</span>
                        </li>
                        <li>
                            <span class="dt">E-posta</span>
                            <span class="dd">@Model.Email</span>
                        </li>
                    </ul>
                </div>
                <div class="card-simple p-4">
                    <h6 class="section-title mb-3"><i class="fas fa-shield-halved text-primary me-2"></i>Güvenlik</h6>
                    <div class="alert alert-success py-2 mb-3 small"><i class="fas fa-check-circle me-1"></i> Şifre durumu: Güncel</div>
                    <a asp-controller="User" asp-action="Profile" class="btn-simple btn-primary-simple btn-sm"><i class="fas fa-key me-1"></i> Şifre Değiştir</a>
                </div>
                <div class="card-simple p-4">
                    <h6 class="section-title mb-3"><i class="fas fa-bell text-primary me-2"></i>Duyurular & Bildirimler</h6>
                    <div class="announcement-card mb-0">
                        <span class="date"><i class="fas fa-calendar-alt me-1"></i>@DateTime.UtcNow.ToLocalTime().ToString("dd.MM.yyyy")</span>
                        <h5 class="mb-2">Panel Güncellendi</h5>
                        <p class="text-muted small mb-2">Yeni modern dikey düzen ile kullanıcı deneyimi iyileştirildi.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-secondary-subtle text-secondary rounded-pill"><i class="fas fa-info-circle me-1"></i>Sistem</span>
                            <a asp-controller="User" asp-action="Profile" class="btn-simple btn-primary-simple btn-sm"><i class="fas fa-user-cog me-1"></i> Profil</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
