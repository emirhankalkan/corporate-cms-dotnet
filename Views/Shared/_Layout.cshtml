@using Microsoft.AspNetCore.Identity
@using CorporateCMS.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kurumsal CMS</title>
    <meta name="description" content="@ViewData["MetaDescription"]" />
    <meta name="keywords" content="@ViewData["MetaKeywords"]" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar-app navbar navbar-expand-lg px-0">
            <div class="container">
                <a class="brand-app text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-icon-app"><i class="fas fa-building"></i></span>
                    Kurumsal CMS
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navMain" aria-controls="navMain" aria-expanded="false" aria-label="Menü">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse nav-collapse-app" id="navMain">
                    <ul class="navbar-nav mx-auto nav-links-app mb-3 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link-app @(Context.Request.Path == "/" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i>
                                <span>Ana Sayfa</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-app @(Context.Request.Path.StartsWithSegments("/Page") ? "active" : "")" asp-area="" asp-controller="Page" asp-action="Index">
                                <i class="fas fa-file-alt"></i>
                                <span>Sayfalar</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-app @(Context.Request.Path.StartsWithSegments("/Announcement") ? "active" : "")" asp-area="" asp-controller="Announcement" asp-action="Index">
                                <i class="fas fa-bullhorn"></i>
                                <span>Duyurular</span>
                            </a>
                        </li>
                    </ul>
                    <div class="ms-auto nav-auth-group">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="mt-5 pt-4 pb-4" style="background:var(--color-surface); border-top:1px solid var(--color-border);">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-6">
                    <h5 class="fw-semibold mb-2">Kurumsal CMS</h5>
                    <p class="u-muted small mb-0">ASP.NET Core içerik yönetim sistemi.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <ul class="list-inline small mb-0">
                        <li class="list-inline-item"><a href="/" class="text-decoration-none u-muted">Ana Sayfa</a></li>
                        <li class="list-inline-item"><a asp-area="" asp-controller="Page" asp-action="Index" class="text-decoration-none u-muted">Sayfalar</a></li>
                        <li class="list-inline-item"><a asp-area="" asp-controller="Announcement" asp-action="Index" class="text-decoration-none u-muted">Duyurular</a></li>
                        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("SuperAdmin") || User.IsInRole("Admin")))
                        {
                            <li class="list-inline-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="text-decoration-none u-muted">Yönetim</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="u-divider"></div>
            <div class="text-center small u-muted">&copy; @DateTime.Now.Year - Kurumsal CMS</div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Navbar scroll effect
        document.addEventListener('scroll', function(){
            const nav = document.querySelector('.navbar-app');
            if(!nav) return; 
            if(window.scrollY > 10) nav.classList.add('scrolled'); else nav.classList.remove('scrolled');
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/validation.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
