@model IEnumerable<CorporateCMS.Models.Announcement>

@{
    ViewData["Title"] = "Duyurular";
    ViewData["MetaDescription"] = "Tüm duyurularımızı görüntüleyin.";
    var totalCount = ViewBag.TotalCount as int? ?? 0;
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 10;
    var totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2">
                    <i class="fas fa-bullhorn text-warning me-2"></i>
                    Duyurular
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Ana Sayfa</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Duyurular</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            @if (Model.Any())
            {
                @foreach (var announcement in Model)
                {
                    <div class="card mb-4 shadow-sm">
                        @if (!string.IsNullOrEmpty(announcement.ImagePath))
                        {
                            <img src="@announcement.ImagePath" class="card-img-top" alt="@announcement.Title" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">
                                    @if (announcement.IsPinned)
                                    {
                                        <i class="fas fa-thumbtack text-warning me-2"></i>
                                    }
                                    @announcement.Title
                                </h5>
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    @announcement.CreatedDate.ToString("dd.MM.yyyy")
                                </small>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(announcement.Summary))
                            {
                                <p class="card-text">@announcement.Summary</p>
                            }
                            
                            @if (!string.IsNullOrEmpty(announcement.Tags))
                            {
                                <div class="mb-3">
                                    @foreach (var tag in announcement.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                    {
                                        <span class="badge bg-secondary me-1">@tag.Trim()</span>
                                    }
                                </div>
                            }
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="@Url.Action("Details", "Announcement", new { id = announcement.Id })" class="btn btn-primary">
                                    <i class="fas fa-arrow-right me-1"></i>Detayları Görüntüle
                                </a>
                                <small class="text-muted">
                                    <i class="fas fa-eye me-1"></i>@announcement.ViewCount görüntülenme
                                </small>
                            </div>
                        </div>
                    </div>
                }

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <nav aria-label="Duyuru sayfaları">
                        <ul class="pagination justify-content-center">
                            @if (currentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })">Önceki</a>
                                </li>
                            }

                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                </li>
                            }

                            @if (currentPage < totalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })">Sonraki</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-bullhorn fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Henüz duyuru yok</h5>
                        <p class="text-muted">Duyurular yayınlandığında burada görünecek.</p>
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home me-1"></i>Ana Sayfaya Dön
                        </a>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle text-info me-2"></i>
                        Duyuru Bilgileri
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Toplam Duyuru:</strong> @totalCount</p>
                    <p class="mb-2"><strong>Sayfa:</strong> @currentPage / @totalPages</p>
                    <p class="mb-0"><strong>Sayfa Başına:</strong> @(pageSize) duyuru</p>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-search text-primary me-2"></i>
                        Arama
                    </h6>
                </div>
                <div class="card-body">
                    <form method="get">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Duyuru ara..." name="search">
                            <button class="btn btn-outline-primary" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
