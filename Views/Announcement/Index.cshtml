@model IEnumerable<CorporateCMS.Models.Announcement>

@{
    ViewData["Title"] = "Duyurular";
    ViewData["MetaDescription"] = "Tüm duyurularımızı görüntüleyin.";
    var totalCount = ViewBag.TotalCount as int? ?? 0;
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 10;
    var totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}

<div class="container py-5">
    <div class="row g-4">
        <div class="col-12 d-flex flex-wrap justify-content-between align-items-center">
            <h1 class="h4 d-flex align-items-center gap-2 mb-0"><i class="fas fa-bullhorn text-warning"></i> Duyurular</h1>
            <nav aria-label="breadcrumb" class="small">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Duyurular</li>
                </ol>
            </nav>
        </div>
        <div class="col-lg-8">
            @if (Model.Any())
            {
                @foreach (var announcement in Model)
                {
                    <div class="card-app mb-4">
                        @if (!string.IsNullOrEmpty(announcement.ImagePath))
                        {
                            <div class="mb-3 rounded overflow-hidden" style="max-height:220px;">
                                <img src="@announcement.ImagePath" alt="@announcement.Title" class="w-100" style="object-fit:cover; height:220px;" />
                            </div>
                        }
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="fw-semibold mb-0 text-clamp-2">
                                @if (announcement.IsPinned)
                                {
                                    <i class="fas fa-thumbtack text-warning me-1"></i>
                                }
                                @announcement.Title
                            </h5>
                            <small class="u-muted ms-3"><i class="fas fa-calendar me-1"></i>@announcement.CreatedDate.ToString("dd.MM.yyyy")</small>
                        </div>
                        @if (!string.IsNullOrEmpty(announcement.Summary))
                        {
                            <p class="u-muted small mb-2 text-clamp-3">@announcement.Summary</p>
                        }
                        @if (!string.IsNullOrEmpty(announcement.Tags))
                        {
                            <div class="mb-3 d-flex flex-wrap gap-1">
                                @foreach (var tag in announcement.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <span class="badge-app badge-outline small">@tag.Trim()</span>
                                }
                            </div>
                        }
                        <div class="d-flex justify-content-between align-items-center mt-2 pt-1">
                            <a href="@Url.Action("Details", "Announcement", new { id = announcement.Id })" class="btn-app btn-app-soft"><i class="fas fa-arrow-right"></i> Detay</a>
                            <small class="u-muted"><i class="fas fa-eye me-1"></i>@announcement.ViewCount görüntülenme</small>
                        </div>
                    </div>
                }

                @if (totalPages > 1)
                {
                    <nav aria-label="Duyuru sayfaları">
                        <ul class="pagination justify-content-center mt-4">
                            @if (currentPage > 1)
                            {
                                <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })">Önceki</a></li>
                            }
                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")"><a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a></li>
                            }
                            @if (currentPage < totalPages)
                            {
                                <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })">Sonraki</a></li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="card-app text-center p-5">
                    <i class="fas fa-bullhorn fa-2x u-muted mb-3"></i>
                    <h5 class="u-muted">Henüz duyuru yok</h5>
                    <p class="u-muted small mb-3">Duyurular yayınlandığında burada görünecek.</p>
                    <a href="/" class="btn-app btn-app-outline"><i class="fas fa-home"></i> Ana Sayfa</a>
                </div>
            }
        </div>
        <div class="col-lg-4">
            <div class="card-app mb-4">
                <div class="fw-semibold mb-2 d-flex align-items-center gap-2"><i class="fas fa-info-circle text-info"></i> Duyuru Bilgileri</div>
                <p class="mb-1 small"><strong>Toplam Duyuru:</strong> @totalCount</p>
                <p class="mb-1 small"><strong>Sayfa:</strong> @currentPage / @totalPages</p>
                <p class="mb-0 small"><strong>Sayfa Başına:</strong> @(pageSize) duyuru</p>
            </div>
            <div class="card-app">
                <div class="fw-semibold mb-3 d-flex align-items-center gap-2"><i class="fas fa-search text-primary"></i> Arama</div>
                <form method="get" class="form-app">
                    <div class="input-icon-group mb-2">
                        <span class="icon-box"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" placeholder="Duyuru ara..." name="search" />
                    </div>
                    <button class="btn-app w-100" type="submit"><i class="fas fa-search"></i> Ara</button>
                </form>
            </div>
        </div>
    </div>
</div>
